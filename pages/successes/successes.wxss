/* pages/successes/successes.wxss */

/*myinfo基本样式*/
page{
    width: 100%;
    min-height: 100%;
    background-color: #ffffff;
}
.my-container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
map{
    width: 100%;
    height: 500rpx;
}
.myinfo{
   width: 100%;
   height: auto;
   padding: 30rpx 26rpx;
   box-sizing: border-box;
   border-bottom: 1rpx solid #cccccc;
   flex: 1;
   display: flex;
   flex-direction: column;
}
.info{
    width: 100%;
    height: 100rpx;
    display: flex;
    position: relative;
    flex: 2;
}
.left-avatar-image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.user-nickname{
    height: 80rpx; 
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}
.reached{
    position: absolute;
    right: 36rpx;
    top: 16rpx;
    width: 110rpx;
    height: 40rpx;
    border: 2rpx solid #09d292;
    font-size: 30rpx;
    color: #09d292;
    border-radius: 10%;
}
.text-sus{
    width: 100%;
    height: 40rpx;
    color: #555555;
    font-size: 30rpx;
    flex: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    align-items: center;
}
/*本次行程信息样式*/
.this-travel{
    width: 100%;
    height: 180rpx;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #cccccc;
    flex: 1;
    display: flex;
    flex-direction: column;

}
.this-travel-title{
    width: 50%;
    height: 60rpx;
    font-size: 24rpx;
    color: #000000;
    display: flex;
    align-items: center;
}
.this-travel-info{
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
}
.the-travel-long{
    flex: 1;
    border-right: 2rpx solid #cccccc;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100rpx;
}
.the-travel-last{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100rpx;
}
.the-travel-number{
    flex: 2;
    font-size: 40rpx;
    color: #3c78ff;
    overflow: hidden;
    text-overflow: ellipsis;
}
.the-travel-unit{
    flex: 1;
    font-size: 22rpx;
    color: #555555;
}
/*历史记录样式*/
.history-travel{
    width: 100%;
    height: auto;
    padding: 30rpx 30rpx;
    box-sizing: border-box;
    flex: 1;
    display: flex;
    flex-direction: column;
    border-bottom: 10rpx solid #cccccc;
}
.history-travel-title{
    width: 100%;
    height: 80rpx;
    font-size: 24rpx;
    color: #000000;
    display: flex;
    align-items: center;
    flex: 1;
}
.history-item{
    width: 100%;
    height: 70rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    font-family: "微软雅黑";
    color: #555555;
    flex: 1;
}
.number-color{
    color: #3c78ff;
}
.font-color{
    color: #aaaaaa;
}

/*用户列表样式*/

.usersList{
    padding: 0 26rpx;
    box-sizing: border-box;
    width: 100%;
    height: auto;
    font-family: "微软雅黑";
    color: #555555;
}

.user-item{
    width: 100%;
    height: 120rpx;
    display: flex;
    border-bottom: 1rpx solid #cccccc;
    align-items: center;
    font-size: 30rpx;
}

.item-image{
    flex: 1;
    border-radius: 5%;
}
.item-userName{
    flex: 3;
    display: flex;
    flex-direction: column;
}
.item-time{
    flex: 2;
    display: flex;
    flex-direction: column;
}
.item-distance{
    flex: 2;
    display: flex;
    flex-direction: column;
}
.userImage{
    width: 80rpx;
    height: 80rpx;
}
.first-row{
    font-size: 24rpx;
}
.second-row{
    font-size: 24rpx;
}

