/* pages/searchResult/searchResult.wxss */
.searchresult{
    border-bottom: 10rpx solid #eeeeee;
    color: #555555;
    font-size: 30rpx;
}
.item{
  width: 100%;
  height: 140rpx;
  background-color: white;
  padding: 20rpx;
  box-sizing: border-box;
}
.my-item{
  display: flex;
  flex-direction: row;
}
.left-number{
    width: 40rpx;
}
.left-cicle{
  background-color: #3c78ff;
  width: 40rpx;
  height: 40rpx; 
  border-radius: 50%;
  color: white;
}
.middle-content{
    margin-left: 15rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}
.content-text1{
  flex: 1;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.content-text2{
  flex: 1;
  width: 500rpx;
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.right-position{
    width: 200rpx;
    font-size: 24rpx;
    color: #999999;
}

.target-select{
  width: 100%;
  height: 80rpx;
  border-top: 2rpx solid #eeeeee;
  display: flex;
  position: relative;
}
.select-map{
  background-color: #ffffff;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.watchMap-image{
  width: 32rpx;
  height: 32rpx;
}
.set-destination-image{
  width: 27rpx;
  height: 27rpx;
}
.select-me{
  background-color: #ffffff;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.split{
  width: 2rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  background-color: #eeeeee;
}

.next-page{
  width: 100%;
  height: 80rpx;
  background-color: #eff2f7;
}
.text-color{
  color: #999;
  font-size: 24rpx;
}

/* 其他城市样式列表 */
.toast{
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  color: #ffffff;
  background-color: #000000;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  position: relative;
  box-sizing: border-box;
}
.search-color{
  color: #3c78ff;
}
.x-icon{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.common-box{
  width: 100%;
  height: auto;

  box-sizing: border-box;
}
.common-text-box{
  width: 100%;
  height: 70rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #aaaaaa;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #cccccc;
}
.common-list{
  width: 100%;
  height: 100rpx;
  padding-left: 30rpx;
  color: #555555;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  border-bottom: 1rpx solid #cccccc;
}
.city-chioce-image-box{
  width: 40rpx;
  height: 30rpx;
  padding-right: 30rpx;
  position: absolute;
  right: 20rpx;
}