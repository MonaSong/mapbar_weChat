/* pages/chat/chat.wxss */
page{
    background-color: #e6eaee;
}
.container{
    padding-bottom: 100rpx;
}
.set-container{
    background-color: #e6eaee;
}
.chat{
    width: 100%;
    height: auto;
}
.time-box{
    width: 100%;
    height: auto;
}
.time{
    margin: 30rpx 0;
    width: 210rpx;
    height: 40rpx;
    color: white;
    font-size: 20rpx;
    background-color: #c8c8c8;
    border-radius: 10rpx;
}
.user-list{
    padding: 0 20rpx;
}
.not-me{
    width: 50%;
    height: 110rpx;
    display: flex;
    justify-content: flex-start;
}

.not-me-box{
    width: 160rpx;
    height: 80rpx;
    padding-left: 20rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-radius: 5%;
    position: relative;
}
.not-me-box-angle{
    width: 20rpx;
    height: 20rpx;
    background-color: #ffffff;
    transform: rotate(45deg) translateY(-50%);
    position: absolute;
    left: -14rpx;
    top: 50%;
}
.not-me-box-cicle{
    position: absolute;
    right: -40rpx;
    top: -32rpx;
    width: 40rpx;
    height: 80rpx;
}

.not-me-box-text{
    width: 40rpx;
    height: 80rpx;
    position: absolute;
    right: -40rpx;
    top: 0;
    color: #555555;
    font-size: 20rpx;
}
.me{
    width: 50%;
    height: 110rpx;
    display: flex;
    justify-content: flex-end;
    margin-left: 50%;
    box-sizing: border-box;
    padding-right: 20rpx;
}

.me-box{
    width: 160rpx;
    height: 80rpx;
    background-color: #3c78ff;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    border-radius: 5%;
    position: relative;
}
.me-box-angle{
    width: 20rpx;
    height: 20rpx;
    background-color: #3c78ff;
    transform: rotate(45deg) translateY(-50%);
    position: absolute;
    right: 0;
    top: 48%;
}
.me-box-cicle{
    position: absolute;
    left: -40rpx;
    top: -32rpx;
    width: 40rpx;
    height: 80rpx;
}
.cicle-red{
    width: 16rpx;
    height: 16rpx;
    background-color: red;
    border-radius: 50%;
}
.me-box-text{
    width: 40rpx;
    height: 80rpx;
    position: absolute;
    left: -40rpx;
    top: 0;
    color: #555555;
    font-size: 20rpx;
}
.horn{
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.avatar-image-box{
    width: 80rpx;
    height: 80rpx;
}
.margin-left{
    margin-left: 20rpx;
}
.avatar-image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 5%;
}


/*底部样式*/
.speak{
    width: 100%;
    height: 100rpx;
    display: flex;
    background-color: white;
    align-items: center;
}
.left-set{
    flex: 1;
}
.middle-btn{
    flex: 4;
    height: 70rpx;
}
.speak-btn{
    width: 100%;
    height: 100%;
}
.right-chat{
    flex: 1;
}
.img{
    width: 60rpx;
    height: 60rpx;
}

.hint{
    background-color: black;
    width: 100%;
    height: 100%;
    position: fixed;
    opacity: 0.8;
    left: 0;
    top: 0;
}
.hint-image{
    width: 100%;
    height: 200rpx;
    position: relative;
}
.my-img{
    height: 150rpx;
    width: 150rpx;
    position: absolute;
    right: 50rpx;
    top: 50rpx;
}
.hint-info{
    width: 100%;
    height: 200rpx;
    color: white;
    font-size: 40rpx;
    font-weight: 600;
}
.hint-know{
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    position: relative;
}
.know-box{
    position: absolute;
    top: 600rpx;
    border: 2rpx solid #ffffff;
    border-radius: 5%;
    color: #ffffff;
    width: 300rpx;
    height: 80rpx;
}
